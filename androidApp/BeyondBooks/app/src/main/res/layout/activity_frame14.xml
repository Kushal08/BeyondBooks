<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="in.ac.iiitv.beyondbooks.Frame14">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Topic of discussion"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/forum_topic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forumdesc"
                android:text="forum description"
                android:layout_below="@+id/forum_topic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/forum_discussion"
                android:layout_below="@+id/forumdesc"/>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="310dp"
                android:id="@+id/comment_list"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/forum_discussion"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add comments: "
                android:layout_below="@+id/listView2"
                android:id="@+id/addcomment"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/listView2"
                android:layout_alignParentRight="true">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/yourcomment"
                    android:layout_alignBottom="@+id/scrollView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:layout_alignBottom="@+id/scrollView2"
                    android:layout_alignRight="@+id/scrollView2"
                    android:layout_alignEnd="@+id/scrollView2"
                    android:id="@+id/submit"/>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
